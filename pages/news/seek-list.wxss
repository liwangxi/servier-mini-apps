/* pages/news/seek-list.wxss */
.new-search{
	position: relative;
	width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.new-search input{
	border-radius:33rpx;
	flex: auto;
	background: #eeeeee;
	color: #7b7b7b;
	padding-left: 65rpx;
	box-sizing: border-box;
	font-size: 28rpx;
}
.search-btn{
  margin-left: 20rpx;
  font-size: 28rpx; 
  color: #293a4d;

}
.new-search image{
	width: 35rpx;
	height: 35rpx;
	position: absolute;
	top: 30rpx;
	left: 40rpx;
}
.new-content{
	padding: 0 20rpx 20rpx 20rpx;
	box-sizing: border-box;
	width: 100%;
}
.new-head text{
	border-radius: 12rpx;
	padding: 10rpx;
	font-size: 32rpx;
	color: #7b7b7b;
	border:1px solid #7b7b7b;
}
.new-list{
	display: flex;
	flex-direction: row;
	padding: 20rpx;
}
.list-left{
	margin-right: 20rpx;
}
.list-left image{
	width: 204rpx;
	height: 148rpx;
	border-radius: 12rpx;
}
.list-right{
	font-size: 34rpx;
	color: #000;
}
.news-det{
	margin-bottom: 24rpx;
}
.news-source{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	font-size: 24rpx;
	color: #afafaf;
	align-items: center;
}
.news-review{
	padding:10rpx 15rpx;
	background: #eee;
	border-radius: 25rpx;
}
.news-hot{
	background: #d43737;
	color: #fff;
	padding:10rpx;
	margin-left: 10rpx;
	border-radius: 8rpx;
}
.new-list1{
	display: flex;
	flex-direction: column;
	padding: 20rpx;
	border-bottom: 1px solid #dddddd;
}
.list1-left{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	margin-bottom: 20rpx;
}
.list1-left image{
	width: 204rpx;
	height: 148rpx;
	border-radius: 12rpx;
}
.new-head .active{
	background: #3d99ff;
	color: #fff;
	border:0;
}
.without{
  text-align: center;
  width: 100%;
  color: #7b7b7b;
  font-size: 28rpx;
}