/* pages/index/home/home-service.wxss */
.swiper-around {
  width: 100%;
  height: 280rpx;
}
.swiper-around image {
  width: 100%;
  height: 350rpx;
}
.foot {
  display: flex;
  flex-direction: row;
  width: 100%;
  border-top: 1px solid #e0e1e1;
  position: fixed;
  bottom: 0;
  opacity: 0.9;
  box-shadow: 1px 1px 1px #eee;
  background: #ddd;
}
.foot text{
  flex: 1;
  text-align: center;
  border-right: 1px solid #eee;
  font-size: 26rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.foot text.active{
  background: #dcdddd;
}
