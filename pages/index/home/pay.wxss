image{
  width: 100%;
  height: 100%;
}
.footer{
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  background: #fff;
  height: 80rpx;
  width: 100%;
  border-top: 1px solid #ccc;
  box-shadow: 1px 1px 5px 1px #ccc;
}
.footer image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.footer-item{
  flex: 1;
  text-align: center;
  margin: auto;
  display: flex;
  flex-direction: row;
  color: #727171;
  font-size: 30rpx;
  justify-content: center;
}
.footer-item image{
  margin:0 20rpx;
}
.footer-item button{
  background: #fff;
  border: 0;
  font-size:30rpx;
  color:  #727171;
  display: inline-block;
  padding: 0;
  line-height: normal;
  margin: 0;
}
button::after{
  width: 100;
  border: 0;
}
