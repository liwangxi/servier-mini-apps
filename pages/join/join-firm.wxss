.join-firm-head image {
  width: 100%;
  height: 412rpx;
}

.join-firm-content {
  font-size: 30rpx;
  padding: 25rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid #eee;
  line-height: 48rpx;
  color: #464646;
}

.join-firm-product {
  padding: 20rpx 0 20rpx 20rpx;
  font-size: 34rpx;
  border-bottom: 20rpx solid #eee;
}

.product-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.product-head image {
  width: 18rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.product-scroll {
  white-space:nowrap;
  height: 390rpx;
  padding-bottom: 20rpx;
}
.product-list {
  display: inline-block;
  width: 303rpx;
  overflow: hidden;
  margin-right: 12rpx; 
}
.product-img{
	width: 303rpx;
	height: 303rpx;
	display: block;
	border-radius: 12rpx;
	margin-bottom: 5rpx;
}
.product-name{
	display: block;
	width: 100%;
	text-align: center;
	font-size: 32rpx;
	margin-bottom: 5rpx;
}
.product-price{
	display: block;
	width: 100%;
	text-align: center;
	font-size: 32rpx;
	color: #d43737;
}
.firm-adder{
	display: flex;
	flex-direction: column;
	padding: 20rpx;
	box-sizing: border-box;
}
.adder-list{
	display: flex;
	flex-direction: row;
	padding: 5rpx 0;
  align-items: center;
}
.list-name{
	font-size:32rpx;
	color: #293a4d;
  width: 30%;
}
.list-det{
	font-size:28rpx;
	color: #888888;
	margin-right: 30rpx;
}
.list-img{
	width: 40rpx;
	height: 40rpx;
}
.add-map{
	width: 100%;
	margin-top: 10rpx;
}
