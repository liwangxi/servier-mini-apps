/* pages/nearby/nearby.wxss */

.nearby {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 45rpx;
}

.lock-head {
  margin-right: 30rpx;
  margin-left: 30rpx;
  position: relative;
}

.head-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.head-good {
  width: 64rpx;
  height: 20rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.nearby-center {
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 26rpx;
}

.nearby-list1, .nearby-list2 {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.lock-name {
  font-size: 36rpx;
  color: #000;
  margin-right: 20rpx;
}

.nearby-list1 image {
  width: 32rpx;
  height: 32rpx;
}

.nearby-list2 text {
  margin-right: 5rpx;
}

.nearby-right {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  align-items: center;
}

.iconfont {
  font-size: 50rpx;
  color: #727171;
  margin: auto;
}

.nearby-right {
  margin-left: 100rpx;
}

.order-det {
  margin-top: 10rpx;
}

.list {
  display: flex;
  flex-direction: row;
  padding: 18rpx 20rpx;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #727171;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.item-left {
  width: 60%;
  text-align: left;
}

.item-right {
  width: 40%;
  text-align: left;
}

.order-img {
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #727171;
  font-size: 26rpx;
}

.item-img {
  display: flex;
  flex-direction: column;
  flex: auto;
}

.item-img text {
  margin-top: 47rpx;
  margin-bottom: 15rpx;
  text-align: center;
}

.item-img view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
}

.item-img image {
  width: 130rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-left: 10rpx;
  border: 1px solid #ccc;
}

.order-evaluate {
  display: flex;
  flex-direction: column;
  margin-top: 35rpx;
}

.eva_img_all {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  color: #666;
  margin-top: 10rpx;
}

.eva_img_all image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.order-label {
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.label-item {
  border: 1rpx solid #eee;
  padding: 5rpx 20rpx;
  display: flex;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.label-item image {
  width: 21rpx;
  height: 21rpx;
  margin-left: 10rpx;
}

.evaluate-content {
  width: 90%;
  margin-left: 5%;
  box-sizing: border-box;
  background: #f9f9f9;
  font-size: 26rpx;
  padding: 15rpx;
  border-radius: 12rpx;
  min-height: 100rpx;
  flex-wrap: wrap;
  overflow: hidden;
  display: block;
}

.btn {
  width: 80%;
  margin-left: 10%;
  background: #00a0e9;
  color: #fff;
  margin-top: 40rpx;
}
