/* pages/shop/shop-detail.wxss */
.contain{
    display: flex;
    flex-direction: column;
    font-size: 26rpx;
}
.back-img{
    width: 100%;
    height: 464rpx;
}
.head-detail{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 34rpx;
    border-bottom: 20rpx solid #eeeeee;
}
.head-detail text:nth-child(2){
    font-size: 28rpx;
    color:#3d99ff;
}
.price{
    display: flex;
    flex-direction: row;
    margin-top: 25rpx;
    align-items: center;
    
}
.price iconfont{
    
}
.price text:last-child{
    color: #d43737;
    margin-left: 5rpx;
}
.shop-detail{
    display: flex;
    flex-direction: column;
    border-bottom: 20rpx solid #eeeeee;
    padding: 20rpx;
    box-sizing: border-box;
    justify-content: center;
    text-align: left;
}
.shop-img{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.shop-img image{
  margin: auto;
}
.shop-head{
    font-size:34rpx;
    color: #293a4d;
}
.shop-time{
    font-size:28rpx;
    color: #6e7c8c;
    margin-bottom: 10rpx;
}
.shop-rule{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
}
.rule-detail{
    margin-top: 35rpx;
    margin-bottom: 35rpx;
    font-size:30rpx;
    color: #293a4d;
}
.rule{
    display: flex; 
    flex-direction: column;
}
.rule text:first-child{
    font-size: 34rpx;
    font-weight: bold;
    color: #6e7c8c;
}
.btn{
    margin-top: 80rpx;
    width: 80%;
    margin-left: 10%;
    margin-bottom: 80rpx;
    background: #b3bfcc;
    color: #fff;
}





