/* pages/user/shop-order.wxss */
.tab-list{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 100rpx;
  background: #f2f5f7;
  align-items: center;
}
.tab-list text{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}
.tab-list text.active{
  color: #3d99ff;
}
.list{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #666666;
}
.item{
  display: flex;
  flex-direction: column;
  padding:20rpx 20rpx 0 20rpx;
  border-bottom: 20rpx solid #f2f5f7;
}
.top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding: 25rpx 0;
}
.top text:last-child{
  color: #d33a31;
}
.centen{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.centen image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.centen view{
  display: flex;
  flex-direction: column;
}
.centen view text{
  padding: 5rpx;
}
.bottom{
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.item-btn{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 20rpx 0;
}
.item-btn text{
  border-radius: 40rpx;
  padding: 5rpx 20rpx;
  border: 1px solid #eee;
}


